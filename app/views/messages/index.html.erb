<html>
<head>
</head>

<body>

<div id="logoutButton">		
	<%= link_to "Log out", sessions_path, method: :delete %>
</div>

<p style="color:white; font-size:43px; text-align:center; font-family:Ubuntu; font-weight:700; text-decoration:underline">You've Gots Mails!</p>
<p>It's currently: <div id="currTime"></div></p>
<p><%= Time.now %></p>

<br/><br/>

<% @message.each do |m| %>
<div class="container">
<div class="col-lg-8 col-md-offset-2">
<div class="panel panel-info panel-default">
	<div class="panel-heading">
		<p class="panel-title" style="font-size:22px; font-weight:700">
		<%= m.subject %> 
		<p style="font-size:12px">Sent at: <%= m.created_at %></p>
		</p>
	</div>

	<div class="panel-body">
		<em> <%= m.content %> </em>
	</div>

</div>
</div>
</div>
<% end %>


<div class="container">
<div class="col-lg-8 col-md-offset-2">
	<button type="submit" class="btn btn-lg btn-success" style="background-color:white; font-size:20px; font-family:Ubuntu;font-weight: 700">
	</button>
</div>
</div>

<p>
	<%= link_to "Send New Message", new_message_path %>
</p>


<script type="text/javascript">
function theTime() {	
	var time = new Date();
	document.getElementById("currTime").innerHTML = time.getHours() + ":" + time.getMinutes() + ":" + time.getSeconds();
}
theTime();
</script>

</body>

</html>