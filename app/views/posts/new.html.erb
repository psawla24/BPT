<html>
    <head>
        <title></title>
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBvQPK_z7tyIdBpGxui6Jps_zZsPudqzJ4"></script>
        <script type="text/javascript">
            var geocoder = new google.maps.Geocoder();

            function geocodePosition(pos) {
                geocoder.geocode({
                    latLng: pos
                }, function(responses) {
                    if (responses && responses.length > 0) {
                        updateMarkerAddress(responses[0].formatted_address);
                    } else {
                        updateMarkerAddress('Cannot determine address at this location.');
                    }
                });
            }

            function updateMarkerStatus(str) {
                document.getElementById('markerStatus').innerHTML = str;
            }

            function updateMarkerPosition(latLng) {
                document.getElementById('infolat').value = latLng.lat();
                document.getElementById('infolng').value = latLng.lng();
            }

            function updateMarkerAddress(str) {
                document.getElementById('address').innerHTML = str;
            }

            function initialize() {
                var latLng = new google.maps.LatLng(-34.397, 150.644);
                var map = new google.maps.Map(document.getElementById('mapCanvas'), {
                    zoom: 8,
                    center: latLng,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                });
                var marker = new google.maps.Marker({
                    position: latLng,
                    title: 'Point A',
                    map: map,
                    draggable: true
                });

                // Update current position info.
                updateMarkerPosition(latLng);
                geocodePosition(latLng);

                // Add dragging event listeners.
                google.maps.event.addListener(marker, 'dragstart', function() {
                    updateMarkerAddress('Dragging...');
                });

                google.maps.event.addListener(marker, 'drag', function() {
                    updateMarkerStatus('Dragging...');
                    updateMarkerPosition(marker.getPosition());
                });

                google.maps.event.addListener(marker, 'dragend', function() {
                    updateMarkerStatus('Drag ended');
                    geocodePosition(marker.getPosition());
                });
            }

            // Onload handler to fire off the app.
            google.maps.event.addDomListener(window, 'load', initialize);
        </script>
        <style type="text/css">

            p {
                font-size: 45px;
                text-align: center;
                font-family: Ubuntu;
                font-weight: 700;
                color: #191975;
            }
            #mapCanvas {
                width: 552px;
                height: 554px;
            }
            #infoPanel {
                float: left;
                margin-left: 10px;
            }
            #infoPanel div {
                margin-bottom: 5px;
            }

            .inputHeight {
                height: 112px !important;
            }

            .container-fluid {
                margin-top: 25px;
            }

            .form-group {
                display: inline-block;
                font-size: 16px;
                font-family: Ubuntu;
                background-color: #eee;
                border-radius: 10px;
            }
            a:link {
                color: #191975;
                font-family: Ubuntu;
            }

            a:visited {
                color: #191975;
                font-family: Ubuntu;
            }

            .input-group {
                font-family: Ubuntu;
            }

            button {
                font-family: Ubuntu;
            }

        </style>
    </head>



<body>

<div class="container-fluid">
<div class="panel panel-default">
<div class="panel-heading">
<p>Create Post For A Visited Location</p>
</div>



<div class="panel-body">
<div class="row">
<div class="col-lg-5">
	<div id="mapCanvas" ></div>


	<div id="markerStatus" style="visibility: hidden"></div>
	<div id="address" style="visibility: hidden"></div>

<%= form_for @post do |f| %>

    <div class="form-group">
    <%= f.label :latitude %><br>
    <%= f.text_field :latitude, id: "infolat" %>
    </div>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    
    <div class="form-group">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude, id: "infolng" %>
    </div>
</div>

<div class="col-lg-7">

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.number_field :rating, in: 1.0..10.0, step: 1.0, class: 'form-control', placeholder: "1 (poor) - 10 (great)" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :location, class: 'form-control', placeholder: "City and Country" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.number_field :lengthofstay, in: 1.0..30.0, step: 1.0, class: 'form-control', placeholder: "Length of stay" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :hostel, class: 'form-control', placeholder: "Hostel Name" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :hostelreview, class: 'form-control inputHeight', placeholder: "Hostel Review" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :attraction, class: 'form-control', placeholder: "Must-see Attraction/Sight" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :attractionreview, class: 'form-control inputHeight', placeholder: "Review of Attraction/Sight" %>
</div>

<div class="input-group input-group-lg">
  <span class="input-group-addon"></span>
	<%= f.text_field :overall, class: 'form-control inputHeight', placeholder: "Your Overall Experience" %>
</div><br/>
 
 <button type="submit" class="btn btn-lg">SUBMIT!</button>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
 <%= link_to "Back To Post Collection", posts_path, 'data-no-turbolink' => true %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
 <%= link_to "Back To Dashboard", user_path(current_user) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
 <%= link_to "Log Out", sessions_path, method: :delete %>

<% end %>

</div>
</div>
</div>

</div>
</div>

</body>

</html>