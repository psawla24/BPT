<style type="text/css">

	.container {
		margin-top: 30px;
	}
	
	.panel-heading {
		font-family: Ubuntu;
	}

	.panel-body {
		font-family: Ubuntu;
	}

</style>




<div id="container">

<div id="map">Map!</div>
</div>


<div class="container">
<div class="col-lg-8 col-md-offset-2">
<div class="panel panel-info">


  <div class="panel-body" style="font-size:30px">
    <%= @post.location %>
  </div>  

  <div class="panel-body" style="font-size:20px">
    <p>Rating: <%= @post.rating %> </p>
  </div>

   <div class="panel-body">
    <p>Length of stay: <%= @post.lengthofstay %> days</p>
  </div>

  <div class="panel-heading" >
    <h3 class="panel-title">Hostel: <%= @post.hostel %></h3>
  </div>

   <div class="panel-body">
    <%= @post.hostelreview %>
  </div>

   <div class="panel-heading">
    <h3 class="panel-title">Must-see Attraction: <%= @post.attraction %></h3>
  </div>

   <div class="panel-body">
    <%= @post.attractionreview %>
  </div>

  <div class="panel-heading">
    <h3 class="panel-title">Overall Experience</h3>
  </div>

  <div class="panel-body">
    <%= @post.overall %>
  </div>

  <div class="panel-body">
  <%= link_to "Back to Post Collection", posts_path %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <%= link_to "Delete this post", @post, method: :delete %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <%= link_to "Back To Dashboard", user_path(current_user) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
  <%= link_to "Log Out", sessions_path, method: :delete %>
  </div>

</div>
</div>
</div>




